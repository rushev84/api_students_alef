{
    "openapi": "3.0.0",
    "info": {
        "title": "API для университета",
        "version": "1.0.0"
    },
    "paths": {
        "/api/": {},
        "/api/students": {
            "get": {
                "tags": [
                    "Студенты"
                ],
                "summary": "Получение списка студентов",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Андрей Козлов"
                                            },
                                            "email": {
                                                "type": "string",
                                                "example": "kozlov@mail.ru"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Студенты"
                ],
                "summary": "Создание студента",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "allOf": [
                                    {
                                        "required": [
                                            "name",
                                            "email",
                                            "student_class_id"
                                        ],
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "maxLength": 255,
                                                "pattern": "^[^0-9]*$",
                                                "example": "Иван Иванов"
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email",
                                                "example": "ivanov@mail.ru"
                                            },
                                            "student_class_id": {
                                                "type": "integer",
                                                "example": 3
                                            }
                                        },
                                        "type": "object"
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Студент успешно создан!"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}